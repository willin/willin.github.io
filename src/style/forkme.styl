#forkongithub *
  box-sizing content-box

#forkongithub
  font-size 12px
  position absolute
  display block
  top 0
  right 0
  width 200px
  overflow hidden
  height 200px
  a
    width 200px
    position absolute
    top 60px
    right -60px
    transform rotate(45deg)
    -webkit-transform rotate(45deg)
    box-shadow 0 0 8px rgba(0,0,0,0.8)
    background #000
    color #fff
    text-decoration none
    font-family arial, sans-serif
    text-align center
    font-weight bold
    padding 5px 40px
    font-size 1rem
    line-height 2rem
    transition 0.5s
    &:hover
	    background #555
	    color #fff
    &::before, ::after
      content ""
      width 100%
      display block
      position absolute
      top 1px
      left 0
      height 1px
      background #fff
    &::after
      bottom 1px
      top auto

+responsive-below(767px)
  #forkongithub
    display none
