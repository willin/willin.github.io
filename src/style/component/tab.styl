#container main
  box-shadow 0 1px 6px rgba(0, 0, 0, 0.27), 0 0 40px rgba(0, 0, 0, 0.06) inset
  nav
    ul
      height 100px
      background-color $color4
      position relative
      justify-content center
      align-items flex-end
      display flex
      i
        display block
        font-size 35px
        padding-bottom 5px
      a, a:visited
        text-align center
        display block
        color $color1
        border 0
        width 115px
        height 115px
        padding-top 40px
      a.active, a:hover
        color $color5
      a:hover
        padding-top 35px
      a.active
        border 1px solid #bbb
        border-bottom 0
        border-radius 5px 5px 0 0
        background #bbb
        background -webkit-linear-gradient(to bottom, #bbb, $color4)
        background linear-gradient(to bottom, #ccc, $color4)
